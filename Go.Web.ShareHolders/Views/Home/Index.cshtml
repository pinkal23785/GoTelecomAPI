@{
    ViewData["Title"] = "Share Holder Details";
}
@using Go.Web.ShareHolders.Data.Entities
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions


@model ShareHolderDetails
<div id="complex-ajax">
    <form id="otpform" asp-controller="Home" asp-action="SendOTP" asp-route-culture="@Model.Culture" data-ajax="true" data-ajax-method="post"
          data-ajax-loading="#loader" data-ajax-update="#complex-ajax" data-ajax-failure="Failed();">
        @if (@Model.Culture == "en-US")
        {
            <div class="row mt-3">

                <div class="col">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-user fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["Name"]" class="form-control" asp-for="FullName" />

                    </div>
                    <span asp-validation-for="FullName"></span>
                </div>

                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["ID Number"]" class="form-control" asp-for="ID_Number" />
                        
                    </div>
                    <span asp-validation-for="ID_Number"></span>
                    <span class="text-right d-block field-validation-error"> @ViewBag.Message</span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                        <textarea asp-for="Address" class="form-control" placeholder="@Localizer["Address"]"></textarea>
                    </div>
                </div>
            </div>
            <div class="row mt-3">

                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["City"]" class="form-control" asp-for="City" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["PO Box"]" class="form-control" asp-for="POBOX" />
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["Zip Code"]" class="form-control" asp-for="ZipCode" />
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-phone fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["Phone"]" class="form-control" asp-for="MobileNumber" />
                    </div>
                    <span asp-validation-for="MobileNumber"></span>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope-o fas"></i></span>
                        </div>
                        <input type="text" placeholder="@Localizer["Email"]" class="form-control" asp-for="Email" />
                    </div>
                </div>
            </div>
            <div class="row mt-3 text-right">
                <div class="col">
                    <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary" />
                </div>
            </div>
        }
        else
        {
            <div class="row mt-3">

                <div class="col">
                    <div class="input-group mb-2">

                        <input type="text" placeholder="@Localizer["Name"]" class="form-control text-right" asp-for="FullName" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-user fas"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="FullName" class="text-right d-block"></span>
                </div>

                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" placeholder="@Localizer["ID Number"]" class="form-control text-right" asp-for="ID_Number" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="ID_Number" class="text-right d-block"></span>
                    <span class="text-right d-block field-validation-error">@ViewBag.Message</span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="input-group mb-3">

                        <textarea asp-for="Address" class="form-control text-right" placeholder="@Localizer["Address"]"></textarea>
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">

                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" placeholder="@Localizer["City"]" class="form-control text-right" asp-for="City" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" placeholder="@Localizer["PO Box"]" class="form-control text-right" asp-for="POBOX" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" placeholder="@Localizer["Zip Code"]" class="form-control text-right" asp-for="ZipCode" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-pencil fas"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="input-group mb-2">

                        <input type="text" placeholder="@Localizer["Phone"]" class="form-control text-right" asp-for="MobileNumber" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-phone fas"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="MobileNumber" class="text-right d-block"></span>
                </div>
                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" placeholder="@Localizer["Email"]" class="form-control text-right" asp-for="Email" />
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope-o fas"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3 text-left">
                <div class="col">
                    <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary" />
                </div>
            </div>
        }

        @Html.HiddenFor(m=>m.Culture)
    </form>
</div>
<script>
function Failed(xhr){
    alert('Failed');    
}
</script>